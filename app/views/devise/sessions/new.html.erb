  <div class="text-center mb-4">
    <h1 class="h3 mb-3 font-weight-normal">ログイン</h1>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control", placeholder:"メールアドレス"%>
    </div> 
    <br>
    <div class="field">
      <%= f.label :パスワード %>
      <%= f.password_field :password, autocomplete: "off",class:"form-control", placeholder:"パスワード" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="checkbox mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :ログインを記録する %>
      </div>
    <% end -%>


    <div class="text-center mb-4">
      <%= f.submit "ログイン",class:"btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>







<%= render "devise/shared/links" %>

