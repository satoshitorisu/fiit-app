<h2>プロフィール情報</h2>

<hr>  

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-row mt-4">
    <div class="form-group col-md-12">
      <%= f.label :ユーザーネーム %>
      <%= f.text_field :username, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>
  </div>

  <div class="form-row mt-4">
    <div class="form-group col-md-6">
      <%= f.label :名字 %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label :氏名 %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>
  </div>

  <div class="form-row mt-4">
    <div class="form-group col-md-12">
      <%= f.label :生年月日 %>
      <%= f.date_field :birth_date, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>
  </div>

  <div class="form-group mt-4">
    <%= f.label :プロフィール写真 %>
    <%#= f.attachment_field :image, autofocus: true, autocomplete: "email" , class:"form-control" %>
  </div>


  <div class="form-group mt-4">
    <%= f.label :所属ジム %>
    <%= f.text_field :company, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <div class="form-group mt-4">
    <%= f.label :資格 %>
    <%= f.text_field :qualification, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <div class="form-group mt-4">
    <%= f.label :自己紹介文 %>
    <%= f.text_area :description, autofocus: true, autocomplete: "email" , class:"form-control" %>
    <small>※登録後、編集することも可能です</small>
  </div>
<br>
<br>
<br>
<h2>ログイン情報</h2>
<hr>
  <div class="form-group mt-4">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control" %>
  </div>
  <div class="form-group mt-4">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off" , class:"form-control" %>
  </div>
  <div class="form-group mt-4">
    <%= f.label :パスワード（確認用） %>
    <%= f.password_field :password_confirmation, autocomplete: "off" , class:"form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "登録" ,class:"form-control btn btn-primary btn-lg mt-4"%>
  </div>
<% end %>
<br>

<%= render "devise/shared/links" %>
