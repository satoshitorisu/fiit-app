<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="form-row mt-4">
    <div class="form-group col-md-6">
      <%= f.label :名字 %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label :氏名 %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>
  </div>

  <div class="form-group mt-4">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control" %>
  </div>
  <div class="form-group mt-4">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off" , class:"form-control" %>
  </div>
  <div class="form-group mt-4">
    <%= f.label :パスワード（確認用） %>
    <%= f.password_field :password_confirmation, autocomplete: "off" , class:"form-control" %>
  </div>

  <div class="form-group mt-4">
    <%#= f.label :トレーナーID %>
    <%#= current_trainer.id %>
    <%#= hidden_field_tag :trainer_id, current_trainer.id %>
    <%#= hidden_field :trainer_id, current_trainer.id %>
    <%#= f.text_field :trainer_id, vaule: current_trainer.id %>
    <%= f.hidden_field :trainer_id, :value => current_trainer.id %>
    

  </div>

  <div class="actions">
    <%= f.submit "登録" ,class:"form-control btn btn-primary btn-lg mt-4"%>
  </div>
<% end %>

<%= render "users/shared/links" %>
